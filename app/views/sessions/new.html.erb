<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>

    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: 'input-block-level' %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'input-block-level' %>

    <%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>